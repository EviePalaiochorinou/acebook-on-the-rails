
<h2> Edit Profile Picture: </h2>

<% if @user.profile_picture.representable? %>
  <%= image_tag @user.profile_picture.representation(resize_to_limit: [640, 640]) %>
<% end %>

<%= form_with(model: @user, local: true) do |form| %>

  <div class="field p-3">
    <div class="control">
      <%= form.label "Profile Photo" %>
      <%= form.file_field :profile_picture %> 
    </div>
  </div>

  <%= form.submit "Upload" %>
  
<% end %>