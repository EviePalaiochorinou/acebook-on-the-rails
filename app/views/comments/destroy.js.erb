deleteComment = () => {
  let thingToDelete = document.getElementById("comment-<%=@comment.id%>");
  thingToDelete.remove();
}

deleteComment();

makeFlashMessageSuccess = () => {
  let existingFlash = document.getElementById("flashmessage")
  if (existingFlash) {
    existingFlash.remove();
  }
  let flashMessage = document.createElement("div")
  flashMessage.className = "is-success notification is-light has-text-bold alert alert-success"
  flashMessage.setAttribute("id", "flashmessage")
  flashMessage.innerText = "Comment deleted";

  let body = document.querySelector("body");
  body.prepend(flashMessage);
}

makeFlashMessageSuccess();

